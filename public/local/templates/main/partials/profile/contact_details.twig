<form action="/api/user/profile" method="post" class="contact_details">
    <div class="grid">
        <div class="col col_2">
            <h4 class="tab_title">1. Персональные данные</h4>
            <label class="label">
                <input name="NAME" value="{{ user.NAME }}" type="text" placeholder="Фамилия, Имя, Отчество">
            </label>
            <label class="label">
                <input name="WORK_POSITION" value="{{ user.WORK_POSITION }}" type="text" placeholder="Ваша должность">
            </label>
            <label class="label">
                <input name="PERSONAL_PHONE" value="{{ user.PERSONAL_PHONE }}" type="text" placeholder="Рабочий / мобильный телефон">
            </label>
            <label class="label">
                <input name="EMAIL" value="{{ user.EMAIL }}" type="text" placeholder="E-mail">
            </label>
            <label class="label">
                <input name="PASSWORD" type="password" placeholder="Новый пароль">
            </label>
            <label class="label">
                <input name="CONFIRM_PASSWORD" type="password" placeholder="Подтверждение пароля">
            </label>
        </div>
        <div class="col col_2">
            <h4 class="tab_title">2. Данные компании номинантаx</h4>
            <label class="label">
                <input name="WORK_COMPANY" value="{{ user.WORK_COMPANY }}" type="text" placeholder="Название компании">
            </label>
            <label class="label">
                <input name="WORK_PROFILE" value="{{ user.WORK_PROFILE }}" type="text" placeholder="Направление деятельности организации">
            </label>
            <label class="label">
                <input name="WORK_WWW" value="{{ user.WORK_WWW }}" type="text" placeholder="Сайт компании">
            </label>
            <label class="label">
                <input name="WORK_STREET" value="{{ user.WORK_STREET }}" type="text" placeholder="Фактический адрес организации">
            </label>
            <div class="grid grid--full">
                <div class="col col_2">
                    <label class="label">
                        <input name="WORK_PHONE" value="{{ user.WORK_PHONE }}" type="text" placeholder="Телефон ">
                    </label>
                </div>
                <div class="col col_2">
                    <label class="label">
                        <input name="UF_WORK_EMAIL" value="{{ user.UF_WORK_EMAIL }}" type="text" placeholder="E-mail">
                    </label>
                </div>
            </div>
            <label class="label">
                <input name="UF_CEO" value="{{ user.UF_CEO }}" type="text" placeholder="Генеральный директор / руководитель организации">
            </label>
            <label class="label">
                <input name="UF_PURCHASING_DIRECT" value="{{ user.UF_PURCHASING_DIRECT }}" type="text" placeholder="Директор по закупкам">
            </label>
        </div>
    </div>
    <div class="wrap_formBtn">
        <div class="form-message"></div>
        <button type="submit" class="btn--blue">Сохранить</button>
    </div>
</form>