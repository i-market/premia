<form class="block" method="post" action="{{ action }}" name="{{ name }}">
    <span class="close"></span>
    <strong>{{ title }}</strong>
    {% for field in fields %}
        {% if field.type == 'textarea' %}
            <textarea name="{{ field.name }}" placeholder="{{ field.label }}"></textarea>
        {% else %}
            <input name="{{ field.name }}" type="text" placeholder="{{ field.label }}">
        {% endif %}
    {% endfor %}
    <div class="bottom">
        <button type="submit" class="btn">отправить</button>
    </div>
</form>