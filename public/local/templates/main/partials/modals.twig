<!--МОДАЛКИ-->
<div class="modal" id="password-reset-modal">
    <div class="block">
        <span class="close"></span>
        <form action="/api/user/reset" method="post" class="modal_form" novalidate>
            <h4 class="tab_title">Восстановление доступа</h4>
            <label class="label">
                <input name="email" type="email" placeholder="E-mail">
            </label>
            <div class="form-message"></div>
            <div class="wrap_btn">
                <div>
                    <button type="submit" class="btn--blue">Восстановить доступ</button>
                </div>
            </div>
        </form>
    </div>
</div>
<!--Вход в личный кабинет-->
<div class="modal" id="login-modal">
    <div class="block">
        <span class="close"></span>
        {% include partial('login_form.twig') %}
    </div>
</div>
<!--Регистрация участника конкурса-->
<div class="modal" id="signup-modal">
    <div class="block">
        <span class="close"></span>
        <form action="/api/user/signup" method="post" class="modal_form" novalidate>
            <h4 class="tab_title">Регистрация участника конкурса</h4>
            <label class="label">
                <input name="full-name" type="text" placeholder="ФИО">
            </label>
            <label class="label">
                <input name="company" type="text" placeholder="Название компании">
            </label>
            <label class="label">
                <input name="phone" type="tel" placeholder="Номер телефона">
            </label>
            <label class="label">
                <input name="email" type="email" placeholder="E-mail">
            </label>
            <label class="label">
                <input name="password" type="password" placeholder="Пароль">
            </label>
            <label class="label">
                <input name="password-confirmation" type="password" placeholder="Введите пароль еще раз">
            </label>
            <div class="form-message"></div>
            <div class="wrap_btn">
                <div>
                    <button type="submit" class="btn--blue">Зарегистрироваться</button>
                </div>
            </div>
        </form>
    </div>
</div>
<!--Напишите нам сообщение-->
<div class="modal" id="contact-modal">
    <div class="block">
        <span class="close"></span>
        <form action="{{ form_specs.contact.action }}" method="post" class="modal_form" novalidate>
            <h4 class="tab_title">Напишите нам сообщение</h4>
            <label class="label">
                <input name="name" type="text" placeholder="Ваше имя">
            </label>
            <label class="label">
                <input name="email" type="email" placeholder="Ваш E-mail">
            </label>
            <label class="label label_textarea">
                <span class="placeholder">Ваше сообщение</span>
                <textarea name="message" rows="1" maxlength="15000"></textarea>
                <span class="chars"></span>
            </label>
            <div class="form-message"></div>
            <div class="wrap_btn">
                <script>
                    function submitForm(token) {
                        $('#contact-modal form').submit();
                    }
                </script>
                <div>
                    <button class="g-recaptcha btn--blue"
                            data-sitekey="{{ recaptcha.site_key }}"
                            data-callback="submitForm">
                        Отправить
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
