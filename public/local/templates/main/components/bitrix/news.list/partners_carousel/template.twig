<section class="partners">
    <div class="wrap">
        <h2>Партнеры премии</h2>
        <div class="carusel">
            {% for item in result.ITEMS %}
                <div id="{{ add_editing_actions(item, template) }}">
                    {% set link = item.PROPERTIES.LINK.VALUE %}
                    {% set has_link = link is not empty %}
                    {# TODO refactor conditional wrapping #}
                    {% if has_link %}
                        <a class="wrap" href="{{ link }}" target="_blank">
                    {% else %}
                        <div class="wrap">
                    {% endif %}
                    <img src="{{ item.PREVIEW_PICTURE.RESIZED.src }}" alt="{{ item.NAME }}">
                    {% if has_link %}
                        </a>
                    {% else %}
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
</section>